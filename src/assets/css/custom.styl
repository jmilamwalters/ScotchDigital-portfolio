@import 'jeet'

/* --------------------------------

Custom Styling

-------------------------------- */

/* =================================================
   1. Utilities - These things get used a lot
   ================================================= */

/* Variables : Colors
================================================== */
psycho-black        = rgba(51, 47, 62, 1)
psycho-grey         = rgba(230, 230, 230, 1)
psycho-grey-light   = rgba(217, 217, 217, 1)
psycho-pink         = rgba(249, 0, 79, 1)
psycho-teal         = rgba(128, 200, 181, 1)
psycho-yellow       = rgba(255, 238, 0, 1)

/* Variables : Typography
================================================== */
psycho-display  = "Montserrat", sans-serif
psycho-sans     = "Lato", sans-serif
psycho-serif    = "Merriweather", serif

/*******************************
        Semantic UI
*******************************/
/*******************************
             Icon
*******************************/
@font-face
  font-family: 'Icons';
  src: url("../fonts/icons.eot");
  src: url("../fonts/icons.eot?#iefix") format('embedded-opentype'), url("../fonts/icons.woff2") format('woff'), url("../fonts/icons.woff") format('woff'), url("../fonts/icons.ttf") format('truetype'), url("../fonts/icons.svg#icons") format('svg');
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-decoration: inherit;
  text-transform: none;

/* --------------------------------

FlowType CSS

-------------------------------- */

html
  font-size 62.5%

body
  font-size 16px // formerly 2.4em

h2
  font-size 4.2rem

h2.section-title
  font-family psycho-sans
  text-transform uppercase !important
  font-weight 300

h6
  font-family psycho-sans
  font-size 3.6rem

h6.title
  color psycho-pink !important
  font-family psycho-display !important
  font-size 3.6rem
  text-transform uppercase !important

h6.education-heading, .education-heading
  font-weight 900
  font-size 3.6rem
  text-transform uppercase

h6.education-body, .education-body
  font-weight 300
  font-size 3.6rem


/* --------------------------------

Slabtext CSS

-------------------------------- */
.slabtexted .slabtext
  display -moz-inline-box
  display inline-block
  white-space nowrap

.slabtextinactive .slabtext
  display inline
  white-space normal
  font-size 1em !important
  letter-spacing:inherit !important
  word-spacing inherit !important
  *letter-spacing:0 !important
  *word-spacing:0 !important

.slabtextdone .slabtext
  display block